<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/menubackground"
    android:id="@+id/tmview">


    <Button
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:id="@+id/sss"
        android:background="@drawable/menusuccessbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:id="@+id/todaystore"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/todaystore"
        android:layout_above="@+id/viewstore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/todaymenu"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/todaymenu2"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/todayprice"
        android:background="@drawable/todayprice"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/todaymenu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewstore"
        android:layout_above="@+id/todaymenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewmenu"
        android:layout_below="@+id/todaymenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewlower"
        android:layout_below="@+id/todayprice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewhigher"
        android:layout_alignTop="@+id/viewlower"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:id="@+id/viewpipe"
        android:layout_below="@+id/todayprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp" />

</RelativeLayout>
