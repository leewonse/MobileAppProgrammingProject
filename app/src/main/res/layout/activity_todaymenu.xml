<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/menubackground"
    >


    <Button
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:id="@+id/button"
        android:background="@drawable/menusuccessbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:id="@+id/todaystore"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/todaystore"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/todaymenu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/todaymenu"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/todaymenu2"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/todayprice"
        android:background="@drawable/todayprice"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/todaymenu"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
