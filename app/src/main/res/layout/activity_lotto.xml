<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:background="@drawable/lotto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="행운에 도전하세요 포인트 차감 -20"
            android:id="@+id/lottobutton"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#10fbff"
            android:padding="15dp"
            android:textColor="#ff0a18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1등 200"
            android:id="@+id/textView4"
            android:layout_marginTop="44dp"
            android:textSize="30dp"
            android:textColor="#0b00ff"
            android:textStyle="bold"
            android:layout_below="@+id/lottobutton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2등 100"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3등 50"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4등 20"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5등 꽝"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/returnfromlottotochoose"
            android:background="@drawable/returnarrow"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

    </RelativeLayout>

</LinearLayout>
