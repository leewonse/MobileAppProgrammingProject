<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainview">


    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/SelectButton"
        android:gravity="top"
        android:textSize="30dp"
        android:background="@drawable/selectbutton"
        android:layout_above="@+id/MenuButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/MenuButton"
        android:gravity="top"
        android:textSize="30dp"
        android:background="@drawable/menulistview"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/startButton"
        android:gravity="top"
        android:textSize="30dp"
        android:background="@drawable/earnmoneyview"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/MenuButton"
        android:layout_alignStart="@+id/MenuButton" />

</RelativeLayout>
